= form_for @order, :url => { :controller => "orders", :action => "new" } do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %div{:class=>["alert","alert-error"]}
        %ul
          - @order.errors.full_messages.each do |msg|
            %li= msg

  
  %h2 Address Details
  = render :partial => 'billing_address', :locals => { f: f }
  = render :partial => 'shipping_address', :locals => { f: f }

  %h2 Shipment Condition
  = render :partial => 'shipment_condition', :locals => { f: f, shipment_conditions: @shipment_conditions }

  %h2 Payment
  = render :partial => 'payment', :locals => { f: f }

  = f.submit "Place Order"

  %h2= "Order Summary"
  = render :partial => 'summary', :locals => { f: f, cart: @order.cart }
