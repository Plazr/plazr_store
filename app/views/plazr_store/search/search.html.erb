<div class="container">
	<div class="page-header">
		<h1><%= "Search Results for \"#{params[:search]}\"" %></h1>
	</div>

	<div class="row-fuild" id="filters">

		<div class="span3">
			<span>Preço: </span>
			<input type="number" value="0" name="min_price">
			<span> € a </span>
			<input type="number" value="0" name="max_price">
			<span> €</span>
		</div>

		<div class="span2">
			<select id="cat">
				<option value="-">Categoria</option>
				<% @categories.each do |cat| %>
					<option><%= cat.name %></option>
				<% end %>
			</select>
		</div>

		<div class="span2">
			<select id="brand">
				<option value="-">Marca</option>
				<% @products.uniq.each do |product| %>
					<option><%= product.brand.name %></option>
				<% end %>
			</select>
		</div>

		<div class="span2">
			<select id="price">
				<option value="-">Preço</option>
				<option>Ascendente</option>
				<option>Descendente</option>
			</select>
		</div>

		<div class="span1">
			<a class="btn btn-primary">Filter</a>
		</div>

	</div>

	<div class="row">
		<% @products.each do |product| %>
			<%= render 'plazr_store/shared/thumb-item', recommended: product %>
		<% end %>
	</div>

	<%= will_paginate @products %>
</div>
