#admin
	%h1 Lista de Marcas
	#brands.listing
		%table.table.table-striped.table-hover.table-bordered
			%thead
				%tr
					%th.name Nome
			%tbody
				%tr.success
					%td{ :colspan => 3 }
						= link_to 'Adicionar marca', new_admin_brand_path
				- @brands.each do |b|
					%tr
						%td.name= b.name
						%td.btn-mini
							= link_to 'Editar', edit_admin_brand_path(b), :class => [:btn, 'btn-mini']
						%td.btn-mini
							= link_to 'Eliminar', admin_brand_path(b), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => [:btn, 'btn-mini', 'btn-danger']
	= will_paginate @brands, :renderer => BootstrapPagination::Rails
