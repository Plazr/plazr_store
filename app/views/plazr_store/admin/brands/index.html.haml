%h1 Listing Brands
%table
  %thead
    %tr
      %th Name
  %tbody
    - @brands.each do |brand|
      %tr
        %td
          = brand.name
        %td
          = link_to 'Show', admin_brand_path(brand)
        %td
          = link_to 'Edit', edit_admin_brand_path(brand)
        %td
          = link_to 'Destroy', admin_brand_path(brand), :method => :delete, :data => { :confirm => 'Are you sure?' }
= link_to 'New Brand', new_admin_brand_path
