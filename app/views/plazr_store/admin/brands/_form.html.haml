= form_for [:admin, @brand] do |f|
  - if @brand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brand.errors.count, "error")} prohibited this brand from being saved:"
      %div{:class=>["alert","alert-error"]}
        %ul
          - @brand.errors.full_messages.each do |msg|
            %li= msg

  = f.label :name
  = f.text_field :name

  = f.submit "Submit"
  = link_to 'Cancel', admin_brands_path
