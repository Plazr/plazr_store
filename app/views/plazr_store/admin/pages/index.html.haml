%h1 Listing Pages
%table
  %thead
    %tr
      %th Title
  %tbody
    - @pages.each do |page|
      %tr
        %td
          = page.title
        %td
          = link_to 'Show', admin_page_path(page)
        %td
          = link_to 'Edit', edit_admin_page_path(page)
        %td
          = link_to 'Destroy', admin_page_path(page), :method => :delete, :data => { :confirm => 'Are you sure?' }
= link_to 'New Page', new_admin_page_path