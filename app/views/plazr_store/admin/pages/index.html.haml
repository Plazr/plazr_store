#admin
	.listing
		%h1 Lista de Páginas da Loja
		%table.table.table-striped.table-hover.table-bordered
			%thead
				%tr
					%th Título
			%tbody
				- if @pages.empty?
					%tr.info
						%td
							= raw "Não existem páginas. Clique #{link_to 'aqui', new_admin_page_path} para criar uma nova página."
				- else
					%tr.success
						%td
							= link_to 'Adicionar página', new_admin_page_path
					- @pages.each do |page|
						%tr
							%td= page.title
							%td
								= link_to 'Editar', edit_admin_page_path(page), :class => [:btn, 'btn-small']
							%td
								= link_to 'Eliminar', admin_page_path(page), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => [:btn, 'btn-small', 'btn-danger']
		= will_paginate @pages, :renderer => BootstrapPagination::Rails
