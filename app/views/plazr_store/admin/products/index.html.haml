#admin
	%ul.thumbnails
		%li.span2
			.thumbnail
				= link_to new_admin_product_path do
					%strong.title Adicionar
					%div
						- imgpth = 'http://placehold.it/300&text=Novo'
						%noscript
							= image_tag imgpth
						= content_tag :div, nil, { :class => :photo, style: "background-image:url('#{imgpth}')" }
			.actions
				= link_to new_admin_product_path do
					= button_tag 'Novo', :class => [:btn, 'btn-mini', 'btn-success']
		- @products.each do |product|
			%li.span2
				.thumbnail
					- maxlen = 10
					- name = if product.name.length > maxlen
						- "#{product.name[0...maxlen]}..."
					- else
						- product.name
					%strong.title= link_to name, admin_product_path(product)
					%div
						- imgpth = product.image.file.url(:thumb)
						%noscript
							= image_tag imgpth
						= content_tag :div, nil, { :class => :photo, style: "background-image:url('#{imgpth}')" }
				.actions
					= link_to edit_admin_product_path(product) do
						= button_tag 'Edit', :class => [:btn, 'btn-mini']
					= link_to admin_product_path(product), :method => :delete, data: { confirm: 'Are you sure?' } do
						= button_tag 'Delete', :class => [:btn, 'btn-mini', 'btn-inverse']