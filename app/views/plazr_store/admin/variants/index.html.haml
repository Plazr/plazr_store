#admin
	.row-fluid
		%ul.span10.thumbnails
			- if @variants.empty?
				%li
					%p.text-info= raw("This product has no variants. Create a #{link_to 'new', new_admin_product_variant_path} one?")
			- else
				%li.span2
					= link_to new_admin_product_variant_path do
						.thumbnail
							%strong.title Adicionar
							%div
								- imgpth = 'http://placehold.it/300&text=Novo'
								%noscript
									= image_tag imgpth
								= content_tag :div, nil, { :class => :photo, style: "background-image:url('#{imgpth}')" }
					.actions
						= link_to 'Novo', new_admin_product_path, :class => [:btn, 'btn-mini', 'btn-success']
				- @variants.each do |v|
					%li.span2
						= link_to admin_product_variant_path(@product, v) do
							.thumbnail
								- maxlen = 10
								- title = if v.sku.length > maxlen
									- "#{v.sku[0...maxlen]}..."
								- else
									- v.sku
								%strong.title= title
								%div
									- imgpth = v.image.file.url(:thumb)
									%noscript
										= image_tag imgpth
									= content_tag :div, nil, { :class => :photo, style: "background-image:url('#{imgpth}')" }
						.actions
							= link_to edit_admin_product_variant_path(@product, v) do
								= button_tag 'Editar', :class => [:btn, 'btn-mini']
							= link_to admin_product_variant_path(@product, v), :method => :delete, data: { confirm: 'Are you sure?' } do
								= button_tag 'Eliminar', :class => [:btn, 'btn-mini', 'btn-danger']
