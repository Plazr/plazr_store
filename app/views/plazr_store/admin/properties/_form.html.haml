= form_for [:admin, @property], :html => { :class => [:form, 'form-horizontal'] } do |f|
	- if @property.errors.any?
		#error_explanation
			%h2= "#{pluralize(@property.errors.count, "error")} prohibited this property from being saved:"
			%div{:class=>["alert","alert-error"]}
				%ul
					- @property.errors.full_messages.each do |msg|
						%li= msg

	.control-group
		= f.label 'Identificação', :class => 'control-label'
		.controls
			= f.text_field :id_name, :class => :span4

	.control-group
		= f.label 'Apresentação', :class => 'control-label'
		.controls
			= f.text_field :display_name, :class => :span4

	.control-group
		.controls
			= f.submit 'Guardar', :class => [:btn, 'btn-primary']
