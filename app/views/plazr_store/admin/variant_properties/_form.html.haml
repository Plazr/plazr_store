= form_for [:admin, @variant_property] do |f|
  - if @variant_property.errors.any?
    #error_explanation
      %h2= "#{pluralize(@variant_property.errors.count, "error")} prohibited this variant_property from being saved:"
      %div{:class=>["alert","alert-error"]}
        %ul
          - @variant_property.errors.full_messages.each do |msg|
            %li= msg

  = f.label :id_name
  = f.text_field :id_name

  = f.label :display_name
  = f.text_field :display_name

  = f.submit "Submit"
  = link_to 'Cancel', admin_variant_properties_path
