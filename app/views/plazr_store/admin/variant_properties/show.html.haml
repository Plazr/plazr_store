#admin
	%h1= @variant_property.id_name
	.btn-toolbar
		.btn-group
			= link_to 'Voltar', admin_variant_properties_path, :class => [:btn, 'btn-small']
		.btn-group.pull-right
			= link_to 'Editar', edit_admin_variant_property_path(@variant_property), :class => :btn
			= link_to 'Eliminar', admin_variant_property_path(@variant_property), :method => :delete, :data => { :confirm => "Está prestes a eliminar a propriedade de modelo \"#{@variant_property.id_name}\". Deseja continuar?" }, :class => [:btn, 'btn-danger']
	%h3 Apresentação
	%p= @variant_property.display_name
