	<header class="row-fluid">
		<div class="span12">
			<h1>T-Shirt da Moda</h1>
			<p>classificação</p>
		</div>
	</header>

	<section>
		<div class="row-fluid">
			<div class="span4">
				<img src="/assets/plazr_store/1.png"></img>
			</div>
		</div>
		
		<div class="row-fluid">
			<div class="span8">
				<%= render "sec_images" %>
			</div>
		</div>

		<div class="row-fluid">
			<h3>Descrição</h3>
		</div>
		
		<div class="row-fluid">
