		</div>
		<div class="row-fluid">
			<div class="span4">
				<input type="submit" value="Partilhar" />
			</div>
		</div>

	<section>

	<section>

		<header>
			<div class="row-fluid">
				<div class="span4">
					<h3>Pacote de produtos</h3>
				</div>
			</div>
		</header>
		
			<div class="row-fluid">
				<div class="span4">
					<%= render 'package_group' %>
				</div>
			</div>

	</section>

	<section>

		<header>
			<div class="row-fluid">
				<div class="span4">
					<h3>Produtos relacionados</h3>
				</div>
			</div>
		</header>

			<div class="row-fluid">
				<div class="span4">
					<%= render 'related_products_im' %>
				</div>
			</div>

	</section>

	<section>

		<header>
			<div class="row-fluid">
				<div class="span4">
					<h3>Comentários</h3>
				</div>
			</div>
		</header>

		<div class="row-fluid">
			<div class="span4">
				<%= render 'comment' %>
			</div>
		</div>

	</section>

</article>
