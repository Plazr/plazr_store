<div class="btn-group">
	<% if user_signed_in? %>
		<a class="btn btn-primary dropdown-toggle" href="#">
			<%= current_user.to_s unless Rails.env.test? %>
			<span class="caret"></span>
		</a>
	<% else %>
		<%= link_to 'Iniciar Sessão',  plazr_auth.new_user_session_path, class: 'btn btn-primary' %>
		<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
			<span class="caret"></span>
		</button>
	<% end %>
	<ul class="dropdown-menu pull-right" role="menu">
		<% if user_signed_in? %>
			<li><%= link_to 'Ver Perfil',  plazr_auth.profile_path(current_user) %></li>
			<li><%= link_to 'Editar Perfil',     plazr_auth.edit_user_registration_path %></li>
			<% if current_user.role?('admin') %>
				<li class="divider"></li>
				<li><%= link_to 'Painel Administrador', plazr_auth.admin_path %></li>
			<% end %>
			<li class="divider"></li>
			<li><%= link_to 'Sair', plazr_auth.destroy_user_session_path, :method => :delete %></li>
		<% else %>
			<li><%= link_to 'Iniciar Sessão',  plazr_auth.new_user_session_path %></li>
			<li><%= link_to 'Registar', plazr_auth.new_user_registration_path %></li>
			<li><%= link_to 'Recuperar password',  new_password_path(:user) %></li>
		<% end %>
	</ul>
</div>

<!-- Buy button. It only display if registered and not admin! -->
<% if user_signed_in? && !current_user.role?('admin') %>
	<div class="btn-group">
		<%= link_to 'Comprar',  plazr_auth.new_user_session_path, class: 'btn btn-success' %>
		<button class="btn btn-success dropdown-toggle" data-toggle="dropdown">
			<span class="caret"></span>
		</button>
		<ul class="dropdown-menu pull-right" role="menu">
				<li>Ver o cesto</li>
		</ul>
	</div>
<% end %>