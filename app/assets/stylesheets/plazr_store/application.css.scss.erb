/** Namespaces and reserved names
*
*  <<NOTE>> Keeping this sorted alphabetically will help
*         searching through.
*
*  [PC, 16 Jan 2013]
*  #admin : namespace for all the styling regarding the admin zone
*         (backoffice).
*
*  [PC, 9 Jan 2013]
*  .datepicker : reserved for datepicker dropdown menus.
*                (see application.js)
*
*  [PC, 9 Jan 2013]
*  .timepicker : reserved for timepicker dropdown menus.
*                (see application.js)
*
*  [PC, 9 Jan 2013]
*  div.photo : reserved for divs framing a squared image, e.g. for
*            product images when listing like a grid).
*              (see application.js)
*
*	[Gabriel]
*	a.thumb-item : reserved for products thumbnails.
*				There is a partial for this.
*/

$border-color: #EEE;

$color1: #E4E6E7;
$color2: #24718A;
$color3: #0D607C;
$color4: #48ADCE;
$color5: #63B4CE;

$background-color: $color2;
$background-color2: $color2;


$header-color: rgba( 255, 255, 255, 0.9 );

.hero-wrap {
	z-index: -1;
	position: relative;
	.hero-unit {
		height: 70px;
		padding: 40px 0 10px 0;
		margin-bottom: 5px;
		background: transparent;
		background: url("<%= image_path 'logo.png' %>") left center no-repeat;
		padding-left: 65px;
		a {
			line-height: 45px;
			vertical-align: middle;
			font-size: 70px;
			color: $header-color;
			font-weight: bold;
		}
	}
}

.flash-messages {
	position: absolute;
	bottom: 0;
	padding: 1em 0 1em 0;
}

nav.nav-wrapper {
	width: 100%;
	margin: 0 auto;
	top: 0;
	position: absolute;
	ul {
		padding: 0.5em 0 0 0;
		a {
			color: white;
			text-decoration: underline;
		}
	}
}

body {
	background-color: $background-color;
	background: #666666; /* Old browsers */
	background: -moz-radial-gradient(80% 35%, circle cover,  $background-color 0%, $background-color2 100%); /* FF3.6+ */
	background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,$background-color), color-stop(100%,$background-color2)); /* Chrome,Safari4+ */
	background: -webkit-radial-gradient(80% 35%, circle cover,  $background-color 0%,$background-color2 100%); /* Chrome10+,Safari5.1+ */
	background: -o-radial-gradient(80% 35%, circle cover,  $background-color 0%,$background-color2 100%); /* Opera 12+ */
	background: -ms-radial-gradient(80% 35%, circle cover,  $background-color 0%,$background-color2 100%); /* IE10+ */
	background: radial-gradient(circle at 80% 35%,  $background-color 0%,$background-color2 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$background-color', endColorstr='$background-color2',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */

	> #container-wrapper {
		position: relative;
		.background-color {
			position: absolute;
			top: 0;
			width: 100%;
			height: 50px;
			z-index: -1;
		}
	}

	> #container-wrapper > .container {
		border: 1px solid black;
		box-shadow: 0 1px 0 rgba( 0, 0, 0, 0.5 ), 0 0 2px rgba( 0, 0, 0, 0.5 ), 0 0 8px rgba( 0, 0, 0, 0.1 );
		-moz-box-shadow: 0 1px 0 rgba( 0, 0, 0, 0.5 ), 0 0 2px rgba( 0, 0, 0, 0.5 ), 0 0 8px rgba( 0, 0, 0, 0.1 );
		background-color: white;
		margin-bottom: 2em;
		padding-left: 1em;
		padding-right: 1em;
	}

	> #container-wrapper > .container > footer {
		border-top: 1px solid $border-color;
		margin-bottom: 2em;

		section {
			margin-left: 1em !important;
			padding: 0.5em 0 1em 0;
		}

		.border-right {
			border-right: 1px solid $border-color;
		}

		ul#share {
			list-style:none;
			li {
				display: inline;
				list-style-type: none;
			}
		}
	}

	> footer {
		padding: 2em 0 2em 0;
		color: white;
		background-color: black;
		ul#share {
			padding:0;
			margin:0;
			list-style:none;
			margin:0 auto;
			li {
				display: inline;
				list-style-type: none;
				padding-left: 20px;
			}
		}
	}
}

body {
	#layout-container {
		padding: 0 0 3em 0;
	}
}


.content {
	padding: 10px 0 20px 30px;
	background-color: #DDD;
}


.product-border {
	border: 1px solid;
	text-align: center;
	margin: 1em 0 1em 0;
}


.page-header {
	margin-bottom: 1em;
	padding-bottom: 0
}



table {
	border-spacing: 0;
	width: 100%;
}

table td {
	vertical-align: top;
}




/* RESERVED */
div.photo {
	width: 100%;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: contain;
	-webkit-background-size: contain;
}

/* HACK */
/*   Show cursor as pointer over the anchor of a tab even if the tab
* is active.
*/
.nav-tabs > .active > a:hover {
	cursor: pointer !important;
}
