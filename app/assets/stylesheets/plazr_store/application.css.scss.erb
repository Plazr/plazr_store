 #container-wrapper {
 	background: url(<%= image_path('bg.png') %>) repeat-x;


 }

 body #container-wrapper > .container {
 	background-color: white;
 	-webkit-box-shadow:  0px 0px 3px 3px rgba(0, 0, 0, 0.1);
 	box-shadow:  0px 0px 3px 3px rgba(0, 0, 0, 0.1);
 	margin-bottom: 2em;
 	padding-left: 1em;
 	padding-right: 1em;
 	background-color: white;
 }

 body #container-wrapper > .container > footer {
 	border-top: 1px solid $border-color;
 	margin-bottom: 2em;

 	section {
 		margin-left: 1em !important;
 		padding: 0.5em 0 1em 0;
 	}

 	.border-right {
 		border-right: 1px solid $border-color;
 	}

 	ul#share {
 		list-style:none;
 		li {
 			display: inline;
 			list-style-type: none;
 		}
 	}
 }

 .product-border {
 	border: 1px solid;
 	text-align: center;
 	margin: 1em 0 1em 0;
 }


 table {
 	border-spacing: 0;
 	width: 100%;
 }

 table td {
 	vertical-align: top;
 }


 .content {
 	padding: 10px 0 20px 30px;
 	background-color: #DDD;
 }

 .page-header {
 	margin-bottom: 1em;
