/** Namespaces and reserved names
 *
 *  <<NOTE>> Keeping this sorted alphabetically will help
 *         searching through.
 *
 *  [PC, 16 Jan 2013]
 *  #admin : namespace for all the styling regarding the admin zone
 *         (backoffice).
 *
 *  [PC, 9 Jan 2013]
 *  .datepicker : reserved for datepicker dropdown menus.
 *                (see application.js)
 *
 *  [PC, 9 Jan 2013]
 *  .timepicker : reserved for timepicker dropdown menus.
 *                (see application.js)
 *
 *  [PC, 9 Jan 2013]
 *  div.photo : reserved for divs framing a squared image, e.g. for
 *            product images when listing like a grid).
 *              (see application.js)
 *
 */

 $border-color: #EEE;

 .hero-wrap {
 	z-index: -1;
 	background-color: white;
 	position: relative;
 	.hero-unit {
 		height: 70px;
 		padding: 40px 0 25px 0;
 		margin-bottom: 5px;
 		background: transparent;
 	}
 }

 .flash-messages {
 	position: absolute;
 	bottom: 0;
 	padding: 1em 0 1em 0;
 }

 nav.nav-wrapper {
 	width: 100%;
 	margin: 0 auto;
 	top: 0;
 	position: absolute;
 	ul {
 		padding: 0.5em 0 0 0;
 		a {
 			color: white;
 			text-decoration: underline;
 		}
 	}
 }

 body {
// background: #ffffff; /* Old browsers */
// background: -moz-linear-gradient(top,  #ffffff 0%, #62baea 100%); /* FF3.6+ */
// background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#62baea)); /* Chrome,Safari4+ */
