.hero-wrap {
	background-image: url("<%= image_path('banner3.jpg') %>");
	background-position: left;
	.hero-unit {
		padding-left: 0;
		color: white;
		margin-bottom: 10px;
		background: transparent;
	}
}

.flash-messages {
	padding: 1em;
}

nav.nav-wrapper {
	width: 100%;
	margin: 0 auto;
	top: 0;
	position: absolute;
	ul {
		padding: 0.5em 0 0 0;
		a {
			color: white;
			text-decoration: underline;
		}
	}
}


body {
	#layout-container {
		padding: 0 0 3em 0;
	}
	background-color: white;
}

body > footer {
	padding: 2em 0 2em 0;
	color: white;
	background-color: black;
}

footer {
	ul#share {
		padding:0;
		margin:0;
		list-style:none;
		margin:0 auto;
		li {
			display: inline;
			list-style-type: none;
			padding-left: 20px;
		}
	}
}

.product-border {
	border: 1px solid;
	text-align: center;
	margin: 1em 0 1em 0;
}

#recommended {
	section {
		text-align: center;
	}
	> section article {
		border: 1px solid black;
	}
}

table {
  border-spacing: 0;
  width: 100%;
}

table td {
  vertical-align: top;
}


.content {
  padding: 10px 0 20px 30px;
  background-color: #DDD;
}
