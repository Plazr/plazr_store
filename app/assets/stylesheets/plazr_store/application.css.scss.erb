/** Namespaces and reserved names
*
*  <<NOTE>> Keeping this sorted alphabetically will help
*         searching through.
*
*  [PC, 16 Jan 2013]
*  #admin : namespace for all the styling regarding the admin zone
*         (backoffice).
*
*  [PC, 9 Jan 2013]
*  .datepicker : reserved for datepicker dropdown menus.
*                (see application.js)
*
*  [PC, 9 Jan 2013]
*  .timepicker : reserved for timepicker dropdown menus.
*                (see application.js)
*
*  [PC, 9 Jan 2013]
*  div.photo : reserved for divs framing a squared image, e.g. for
*            product images when listing like a grid).
*              (see application.js)
*
*	[Gabriel]
*	a.thumb-item : reserved for products thumbnails.
*				There is a partial for this.
*/

$border-color: #EEE;

.hero-wrap {
	z-index: -1;
	background-color: white;
	position: relative;
	.hero-unit {
		height: 70px;
		padding: 40px 0 25px 0;
		margin-bottom: 5px;
		background: transparent;
	}
}

.flash-messages {
	position: absolute;
	bottom: 0;
	padding: 1em 0 1em 0;
}

nav.nav-wrapper {
	width: 100%;
	margin: 0 auto;
	top: 0;
	position: absolute;
	ul {
		padding: 0.5em 0 0 0;
		a {
			color: white;
			text-decoration: underline;
		}
	}
}

body {
	background-color: #0388a6;
}

#container-wrapper {
	background: url(<%= image_path('bg.png') %>) repeat-x;


}

body #container-wrapper > .container {
	background-color: white;
	-webkit-box-shadow:  0px 0px 3px 3px rgba(0, 0, 0, 0.1);
	box-shadow:  0px 0px 3px 3px rgba(0, 0, 0, 0.1);
	margin-bottom: 2em;
	padding-left: 1em;
	padding-right: 1em;
	background-color: white;
}

body #container-wrapper > .container > footer {
	border-top: 1px solid $border-color;
	margin-bottom: 2em;

	section {
		margin-left: 1em !important;
		padding: 0.5em 0 1em 0;
	}

	.border-right {
		border-right: 1px solid $border-color;
	}

	ul#share {
		list-style:none;
		li {
			display: inline;
			list-style-type: none;
		}
	}
}

.product-border {
	border: 1px solid;
	text-align: center;
	margin: 1em 0 1em 0;
}


table {
	border-spacing: 0;
	width: 100%;
}

table td {
	vertical-align: top;
}

.content {
	padding: 10px 0 20px 30px;
	background-color: #DDD;
}

.page-header {
	margin-bottom: 1em;
	padding-bottom: 0
}

.hero-unit {
	color: white;
	background-image: url("<%= image_path('banner3.jpg') %>");
	margin-bottom: 10px;
}

.flash-messages {
	padding: 1em;
}


body{
	#layout-container {
		padding: 0 0 3em 0;
	}
}

body > footer {
	padding: 2em 0 2em 0;
	color: white;
	background-color: black;
}

footer {
	ul#share {
		padding:0;
		margin:0;
		list-style:none;
		margin:0 auto;
		li {
			display: inline;
			list-style-type: none;
			padding-left: 20px;
		}
	}
}

.product-border {
	border: 1px solid;
	text-align: center;
	margin: 1em 0 1em 0;
}

table {
	border-spacing: 0;
	width: 100%;
}

table td {
	vertical-align: top;
}


.content {
	padding: 10px 0 20px 30px;
	background-color: #DDD;
}



/* RESERVED */
div.photo {
	width: 100%;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: contain;
	-webkit-background-size: contain;
}

/* HACK */
/*   Show cursor as pointer over the anchor of a tab even if the tab
* is active.
*/
.nav-tabs > .active > a:hover {
	cursor: pointer !important;
}
