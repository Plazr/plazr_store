 $border-color: #EEE;

 .hero-wrap {
 	z-index: -1;
 	background-color: white;
 	position: relative;
 	.hero-unit {
 		height: 70px;
 		padding: 40px 0 25px 0;
 		margin-bottom: 5px;
 		background: transparent;
 	}
 }

 .flash-messages {
 	position: absolute;
 	bottom: 0;
 	padding: 1em 0 1em 0;
 }

 nav.nav-wrapper {
 	width: 100%;
 	margin: 0 auto;
 	top: 0;
 	position: absolute;
 	ul {
 		padding: 0.5em 0 0 0;
 		a {
 			color: white;
 			text-decoration: underline;
 		}
 	}
 }

